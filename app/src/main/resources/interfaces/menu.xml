<?xml version="1.0" encoding="UTF-8"?>
<nifty>
    <screen id="start" controller="jme48.MainMenuController">
        <layer id="background" childLayout="center">
            <image filename="img/gabri.jpg" width="*" height="*"/>
        </layer>
        <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
            <panel id="panel_top" height="25%" width="75%" align="center" childLayout="center" backgroundColor="#0000" visibleToMouse="false">
                <effect>
                    <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                    <onHover name="pulsate" scaleFactor="1" startColor="#f600" endColor="#ffff" post="true"/>
                </effect>
                <text id="title" font="aurulent-sans-16.fnt" text="jME 2048" align="center" valign="center" color="#f00f" height="100%" width="100%"/>
            </panel>
            <panel id="panel_play" height="20%" width="75%" align="center" childLayout="center" backgroundColor="#0f08">
                <effect>
                    <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                    <onHover name="pulsate" scaleFactor="1" startColor="#f600" endColor="#ffff" post="true"/>
                </effect>
                <text id="play" font="aurulent-sans-16.fnt" text="Play" align="center" valign="center" color="#000f"/>
            </panel>
            <panel id="panel_credits" height="20%" width="75%" align="center" childLayout="center" backgroundColor="#ff08">
                <effect>
                    <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                    <onHover name="pulsate" scaleFactor="1" startColor="#f600" endColor="#ffff" post="true"/>
                </effect>
                <text id="credits" font="aurulent-sans-16.fnt" text="Credits" align="center" valign="center" color="#000f"/>
            </panel>
            <panel id="panel_quit" height="20%" width="75%" align="center" childLayout="center" backgroundColor="#0ff8">
                <effect>
                    <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                    <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                    <onHover name="pulsate" scaleFactor="1" startColor="#f600" endColor="#ffff" post="true"/>
                </effect>
                <text id="quit" font="aurulent-sans-16.fnt" text="Quit" align="center" valign="center" color="#000f"/>
            </panel>
        </layer>
    </screen>
    <screen id="game" controller="jme48.GameScreenController">

    </screen>
</nifty>